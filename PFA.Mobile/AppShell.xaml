<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PFA.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PFA.Mobile"
    xmlns:viewmodels="clr-namespace:PFA.Mobile.ViewModels"
    xmlns:views="clr-namespace:PFA.Mobile.Views"
    x:DataType="{x:Type local:AppShell}"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Exam Details Page">
            <ShellContent
                Title="Exams"
                BindingContext="{Binding ExamDetailsViewModel}"
                ContentTemplate="{DataTemplate views:ExamDetailsPage}" />

        </Tab>
        <Tab Title="Etudiants">
            <ShellContent
                Title="Etudiants"
                BindingContext="{Binding ExamDetailsViewModel}"
                ContentTemplate="{DataTemplate views:EtudiantsPage}" />

        </Tab>
    </TabBar>

</Shell>
