    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <VerticalStackLayout Margin="20" Spacing="15">
        <Entry
            x:Name="NumeroApp"
            Placeholder="Entrer numero appoger"
